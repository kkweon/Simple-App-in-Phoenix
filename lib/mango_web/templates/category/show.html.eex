<h1 class="page-title"><%= title_case @name %></h1>
<div>
    <%= for p <- @products do %>
        <div class="product">
            <div class="product-name">
                <%= p.name %>
            </div>
            <div class="product-price">
                <%= p.price %>
            </div>
        </div>
    <% end %>
</div>
