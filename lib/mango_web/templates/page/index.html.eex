<div class="col-md-8 col-md-offset-2">
    <h1 class="page-title"><%= ngettext "Seasonal Product", "Seasonal Products", Enum.count(@seasonal_products) %></h1>

    <div class="row">
        <%= for product <- @seasonal_products do %>
            <div class="col-md-4">
                <%= render MangoWeb.ProductView, "product_card.html", conn: @conn, product: product %>
            </div>
        <% end %>
    </div>
</div>
