<div class="jumbotron">
    <%= if @conn.assigns[:user] do %>
        <h2><%= gettext "Welcome,  %{name}!", name: @conn.assigns.user.username %></h2>
    <% else %>
        <h2><a href="<%= user_path(@conn, :login) %>">Login</a></h2>
    <% end %>
    <p class="lead">Todo Example in Phoenix</p>
</div>
